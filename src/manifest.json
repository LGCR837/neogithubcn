{
  "manifest_version": 3,
  "name": "NeoGithubCN",
  "short_name": "NeoGithubCN",
  "description": "新一代 Github 汉化插件",
  "version": "1.0.0",
  "homepage_url": "https://github.com/LGCR837/neogithubcn",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
